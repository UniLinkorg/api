{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
		"module": "ESNext",
		"target": "ESNext",
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "importHelpers": true,
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules"
    ]
}